<!-- Your Liquid code for the header -->
<header>
  <div class="header-content">
    <h1>{{ shop.name }}</h1>

    <ul class="linklists">
      <!-- Main menu -->
      {% for link in linklists['main-menu'].links %}
        <li>{{ link.title | link_to: link.url }}</li>
      {% endfor %}
    </ul>

    <form action="/search">
      <input type="search" name="q">
      <button class="searchbtn" type="submit">Search</button>
    </form>
  </div>
</header>
